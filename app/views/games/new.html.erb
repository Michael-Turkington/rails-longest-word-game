<h1>New Game</h1>

<h1><%= @letters %></h1>

<h1>What's the longest word you can find?</h1>

<form action="/score" method="post">
  <input type="text" name="word" placeholder="Type your word here..." value="<%= params[:word] %>">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

